<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Theme -->
    <style name="Theme.CalorieCounter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <!-- Default Text Appearance -->
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/backgroundColor</item>

        <!-- Button Style -->
        <item name="buttonStyle">@style/ButtonStyle.CalorieCounter</item>

        <!-- EditText Style -->
        <item name="editTextStyle">@style/EditTextStyle.CalorieCounter</item>

        <!-- Typography -->
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Custom Button Style -->
    <style name="ButtonStyle.CalorieCounter" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Custom EditText Style -->
    <style name="EditTextStyle.CalorieCounter" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
</resources>