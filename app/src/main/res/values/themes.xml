<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Theme -->
    <style name="Theme.CalorieCounter" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Default Text Appearance -->
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/background</item>

        <!-- Button Style -->
        <item name="buttonStyle">@style/ButtonStyle.CalorieCounter</item>

        <!-- EditText Style -->
        <item name="editTextStyle">@style/EditTextStyle.CalorieCounter</item>

        <!-- Typography -->
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Custom Button Style -->
    <style name="ButtonStyle.CalorieCounter" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/beige</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Custom EditText Style -->
    <style name="EditTextStyle.CalorieCounter" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/red</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
</resources>