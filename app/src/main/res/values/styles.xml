<resources>

    <!-- Base Text Appearance -->
    <style name="TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Define a base TextAppearance style for your app -->
    <style name="TextAppearance.CalorieCounter">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Title Text Appearance -->
    <style name="TextAppearance.CalorieCounter.Title">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- App Title Text Appearance -->
    <style name="TextAppearance.AppTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item> <!-- Text color -->
        <item name="android:background">@color/windowBackgroundColor</item> <!-- Background color -->
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Subtitle Text Appearance -->
    <style name="TextAppearance.CalorieCounter.Subtitle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <!-- Body Text Appearance -->
    <style name="TextAppearance.CalorieCounter.Body">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>