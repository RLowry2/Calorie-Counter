<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Exercise Level -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/exerciseCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/exerciseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exercise Name"
            android:textSize="16sp"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Sets and Reps -->
    <TextView
        android:id="@+id/exerciseSetsReps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:paddingStart="40dp"
        android:paddingTop="4dp"
        android:textColor="#555555" />

    <!-- Dynamic Set Checkboxes with Editable Weight and Spinner -->
    <LinearLayout
        android:id="@+id/setsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp">

        <!-- Example for One Set -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp">

            <!-- Set Checkbox -->
            <CheckBox
                android:id="@+id/setCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Editable Weight Input -->
            <EditText
                android:id="@+id/setWeightInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter weight"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <!-- Unit Selector Spinner -->
            <Spinner
                android:id="@+id/unitSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:entries="@array/weight_units" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>