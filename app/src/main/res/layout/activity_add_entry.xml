<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEntryActivity">

    <!-- Food Name EditText -->
    <EditText
        android:id="@+id/foodNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Food Name"
        style="@style/EditTextStyle.CalorieCounter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="350dp" />

    <!-- Food Calories EditText -->
    <EditText
        android:id="@+id/foodCaloriesEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Calories"
        android:inputType="number"
        style="@style/EditTextStyle.CalorieCounter"
        app:layout_constraintTop_toBottomOf="@+id/foodNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        style="@style/ButtonStyle.CalorieCounter"
        app:layout_constraintTop_toBottomOf="@+id/foodCaloriesEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>